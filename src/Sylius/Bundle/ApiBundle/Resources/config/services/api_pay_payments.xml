<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults public="true" />

        <service id="Sylius\Bundle\ApiBundle\Provider\CompositePayPaymentProviderInterface" class="Sylius\Bundle\ApiBundle\Provider\CompositePayPaymentProvider">
            <argument type="tagged_iterator" tag="sylius.api.pay_payment_handler" />
        </service>

        <service id="Sylius\Bundle\ApiBundle\Payment\PayumPayPaymentHandler">
            <argument type="service" id="payum" />
            <tag name="sylius.api.pay_payment_handler" priority="-1000" />
        </service>
    </services>
</container>
